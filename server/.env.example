# Database
MONGODB_URI=mongodb://localhost:27017/paya-marketplace
# For production: mongodb+srv://username:password@cluster.mongodb.net/paya-marketplace

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=5000
NODE_ENV=development

# CORS
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Paya Settings
PAYA_ADVANCE_RATE=0.99
PAYA_LOAN_TERM_DAYS=30

# Email Settings (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Settings (for production)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Production URLs
FRONTEND_URL=https://paya-marketplace.netlify.app
ADMIN_URL=https://paya-marketplace-admin.netlify.app
