# Database
MONGODB_URI=mongodb://localhost:27017/paya-marketplace
# For production: mongodb+srv://username:password@cluster.mongodb.net/paya-marketplace

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=5000
NODE_ENV=development

# CORS
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Paya Settings
PAYA_ADVANCE_RATE=0.99
PAYA_LOAN_TERM_DAYS=30

# Email Settings (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Settings (for production)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Production URLs
FRONTEND_URL=https://paya-marketplace.netlify.app
ADMIN_URL=https://paya-marketplace-admin.netlify.app

# Shopify Integration
# Get these from your Shopify Partner Dashboard > Apps > Your App > Configuration
# Client ID and Client secret are shown in the "Client credentials" section
SHOPIFY_API_KEY=your_shopify_client_id_here
SHOPIFY_API_SECRET=your_shopify_client_secret_here
SHOPIFY_SCOPES=read_products,read_inventory,write_orders
SHOPIFY_REDIRECT_URI=http://localhost:5000/api/integrations/shopify/callback
SHOPIFY_WEBHOOK_URL=http://localhost:5000
# For production: Update the above URLs to your Railway backend URL

# Encryption Key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=generate_a_32_byte_hex_string_here

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
SESSION_SECRET=your_session_secret_here

# Merchant Portal URLs (for OAuth redirects)
APP_URL=http://localhost:3002
MERCHANT_URL=http://localhost:3002
# For production:
# APP_URL=https://merchant.paya-marketplace.netlify.app
# MERCHANT_URL=https://merchant.paya-marketplace.netlify.app
